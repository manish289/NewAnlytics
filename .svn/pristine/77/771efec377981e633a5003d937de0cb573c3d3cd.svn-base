# -----------------------------
# Appender to write to console.
# -----------------------------
log4j.appender.CONSOLE=org.apache.log4j.ConsoleAppender
log4j.appender.CONSOLE.Target=System.out
log4j.appender.CONSOLE.layout=org.apache.log4j.PatternLayout
log4j.appender.CONSOLE.layout.ConversionPattern=[%p] %d{dd-MM-yyyy HH:mm:ss:SSSSSSSS} %c %x - %m%n

# ---------------------------------------------
# Appender to write to application log.
# ---------------------------------------------
log4j.appender.APPLICATIONLOG=org.apache.log4j.DailyRollingFileAppender
#log4j.appender.APPLICATIONLOG.File=D:/Harsh/logs/T247ApiAnalyticsLog/T247ApiAnalytics.log
log4j.appender.APPLICATIONLOG.File=D:/T247ApiAnalyticsLog/T247ApiAnalytics.log
log4j.appender.APPLICATIONLOG.DatePattern='.'dd-MM-yyyy
log4j.appender.APPLICATIONLOG.Encoding=UTF-8
log4j.appender.APPLICATIONLOG.layout=org.apache.log4j.PatternLayout
log4j.appender.APPLICATIONLOG.layout.ConversionPattern=[%p] %d{dd-MM-yyyy HH:mm:ss:SSSSSSSS} %c %x - %m%n

# Turn off root logging.
log4j.rootLogger=info, CONSOLE , APPLICATIONLOG
 
